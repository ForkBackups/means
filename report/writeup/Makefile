all: report.pdf

ALL_TEX := $(shell ls *.tex)

autogenerated-tutorials.tex: generate_tutorials.py ../../examples/Tutorial/*.ipynb
	python generate_tutorials.py ../../examples/Tutorial/

tutorials: autogenerated-tutorials.tex
	echo "generated tutorials"

report.pdf: $(ALL_TEX) report.bib Makefile tutorials
	echo "Generating pdf"
	latexmk report.tex
	
clean:
	latexmk -C
	rm autogenerated-tutorials.tex
	rm report.gl*
